{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  // "include": ["src/**/*"],
  "include": ["**/*.ts", "src/lib/utils/templates/RegistrationEmail.tsx"],
  "exclude": ["node_modules"]
}
